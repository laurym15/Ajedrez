<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_Ran"
    android:background="#E3F2FD"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:maxWidth="200dp"
        android:minWidth="100dp"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/puntos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:minWidth="50dp"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="@+id/item_nombre"
        app:layout_constraintEnd_toStartOf="@+id/posicion"
        app:layout_constraintStart_toEndOf="@+id/item_nombre"
        app:layout_constraintTop_toTopOf="@+id/item_nombre" />

    <TextView
        android:id="@+id/posicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minWidth="50dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/puntos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/puntos"
        app:layout_constraintTop_toTopOf="@+id/puntos" />
</androidx.constraintlayout.widget.ConstraintLayout>